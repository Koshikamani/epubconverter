# Use an official Python image as the base
FROM python:3.11

# Set the working directory inside the container
WORKDIR /app

# Install required system dependencies
RUN apt-get update && apt-get install -y \
    gobject-introspection \
    libgirepository1.0-dev \
    libcairo2-dev \
    gir1.2-gtk-3.0 \
    pkg-config \
    python3-dev \
    python3-gi \
    python3-gi-cairo \
    cmake \
    meson

# Copy the project files into the container
COPY . .

# Change to the backend directory where server.py is located
WORKDIR /app

# Install dependencies using Poetry (if using it) or pip
RUN pip install --no-cache-dir -r ../requirements.txt

# Expose the port if running a web app (adjust if needed)
EXPOSE 8000  # Change if your app uses a different port

# Start the application
CMD ["python", "server.py"]  # This will run server.py inside the backend folder

